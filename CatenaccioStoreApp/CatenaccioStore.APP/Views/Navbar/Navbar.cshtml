                </div>
            </div>
            <div class=" collapse navbar-collapse" id="navbarNavDropdown">
                <div class="ms-auto d-none d-lg-block">
                    <div class="input-group">
                        <span class="border-primary input-group-text bg-primary text-white"><i class="fa-solid fa-magnifying-glass"></i></span>
                        <input type="text" class="form-control border-primary" style="color:#7a7a7a">
                        <button class="btn btn-primary text-white">@Localizer["Search"]</button>
                    </div>
                </div>
                <ul class="navbar-nav ms-auto ">
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase active" aria-current="page" href="#">@Localizer["Offers"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="#">@Localizer["Products"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="#">@Localizer["About"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="#">@Localizer["Contact"]</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto ">
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="#"><i class="fa-solid fa-cart-shopping me-1"></i> @Localizer["Cart"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2 text-uppercase" href="#"><i class="fa-solid fa-circle-user me-1"></i> @Localizer["Account"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


@* For Changing language
 *@<script>
    var currentCulture = new URLSearchParams(window.location.search).get('ui-culture');
    document.getElementById('languageSelector').value = currentCulture;

    document.getElementById('languageSelector').addEventListener('change', function () {
        var selectedValue = this.value;
        var currentUrl = window.location.href;
        var queryString = window.location.search;
        if (queryString) {
            var updatedUrl = currentUrl.replace(/(ui-culture=)[^\&]+/, '$1' + selectedValue);
            window.location.href = updatedUrl;
        } else {
            var separator = currentUrl.includes('?') ? '&' : '?';
            var updatedUrl = currentUrl + separator + 'ui-culture=' + selectedValue;
            window.location.href = updatedUrl;
        }
    });
</script>
