@using CatenaccioStore.Application.Services.Products.DTOs
@model ProductDto

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Details For @Model.ProductName
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <label asp-for="Images" class="control-label"></label>
                    <div>
                        @foreach (var imageLink in Model.Images)
                        {
                            <img src="@imageLink.Url" alt="Image" style="width: 100px; height: 100px; object-fit: cover;" />
                        }
                    </div>
                    <input asp-for="Images" class="form-control" readonly hidden />

                    <div>
                        @foreach (var productImage in Model.Images)
                        {
                            <input type="text" class="form-control" value="@productImage.Url" readonly />
                        }
                    </div>

                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" readonly />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortTitle" class="control-label"></label>
                    <input asp-for="ShortTitle" class="form-control" readonly />
                    <span asp-validation-for="ShortTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control" readonly />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" readonly />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    </div>
                    <div class="col text-right mt-auto">
                        <a class="btn btn-outline-secondary" asp-action="AdminPanelProduct">Back to All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $('#Images')
        })
    </script>
}