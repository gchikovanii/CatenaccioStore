@model ContactVM
@using CatenaccioStore.APP.Data.ViewModels
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<section class="mb-4">
    <h2 class="h1-responsive font-weight-bold text-center my-4">@Localizer["contact"]</h2>
    <p class="text-center w-responsive mx-auto mb-5">
        @Localizer["questions"]
    </p>
    <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" asp-controller="Contact" asp-action="SubmitForm" method="POST">
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="name" class="">@Localizer["name"]</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="email" class="">@Localizer["email"]</label>
                            <input type="text" id="email" name="email" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="subject" class="">@Localizer["subject"]</label>
                            <input type="text" id="subject" name="subject" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <label for="message">@Localizer["yourmessage"]</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" required></textarea>
                        </div>
                    </div>
                </div>
            </form>
            <div class="text-center text-md-left mt-3">
                <button type="submit" class="btn btn-primary">@Localizer["send"]</button>
            </div>
            <div id="status"></div>
        </div>
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>@Localizer["location"]</p>
                </li>
                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+995 574 09 31 34</p>
                </li>
                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>catenaccio.geo@gmail.com</p>
                </li>
            </ul>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#contact-form").submit(function (event) {
            
            console.log('Form submission function called!');
            submitForm();
        });

        function submitForm() {
            document.getElementById('status').innerHTML = "Sending...";

            var formData = {
                'name': $('#name').val(),
                'email': $('#email').val(),
                'subject': $('#subject').val(),
                'message': $('#message').val()
            };

            console.log('Form submitted!');

            $.ajax({
                url: "/Contact/SubmitForm",
                type: "POST",
                data: formData,
                success: function (data) {
                    $('#status').text(data.message);
                    if (data.code) {
                        $('#contact-form').closest('form').find("input[type=text], textarea").val("");
                        alert("Form submitted successfully!");
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $('#status').text(jqXHR.responseText);
                }
            });
        }
    });
</script>
