@using CatenaccioStore.Application.Services.Products.DTOs
@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "List Of Products";
}
<form asp-action="Search" asp-controller="Products" method="get" class="d-flex" style="margin-top: 50px">
    <input class="form-control me-1" type="search" placeholder="Search" aria-label="Search" name="searchString">
    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
</form>

<table id="basic-datatable" class="table dt-responsive nowrap w-100">
    <thead>
        <tr>
            <th>Produc tName</th>
            <th>Short Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>


    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ShortTitle</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Brand</td>
                <td>@item.Quantity</td>
                <td>@item.CategoryId</td>
                <td>
                    <a class="btn btn-outline-primary"><i class="fa-solid fa-pencil"></i></a>
                    <a class="btn btn-outline-warning"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

